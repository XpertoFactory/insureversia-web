<style>
  .back-link {
    display: inline-block;
    margin-bottom: var(--space-4);
    color: var(--color-primary);
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
  }
  .back-link:hover { text-decoration: underline; }
  .mini-hero {
    max-width: 800px;
    padding: var(--space-8) 0 var(--space-4);
  }
  .mini-hero h1 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .mini-hero .lead {
    color: var(--text-secondary);
    font-size: var(--text-lg);
  }

  /* Curator photo — full height on desktop, cropped square on mobile */
  .curator-photo {
    width: 320px;
    height: auto;
    border-radius: var(--radius-xl);
    object-fit: cover;
    box-shadow: var(--shadow-lg);
  }

  @media (max-width: 768px) {
    .curator-photo {
      width: 100%;
      max-width: 320px;
      height: 320px;
    }
  }

  /* Animated CEMI Búlago */
  .bulago-wrapper {
    width: 180px;
    display: block;
    animation: bulago-float 4s ease-in-out 2s infinite,
               bulago-glow 3s ease-in-out 2s infinite;
  }

  .bulago-svg {
    width: 100%;
    height: auto;
    overflow: visible;
    clip-path: circle(0% at 50% 45%);
    animation: bulago-reveal 2s ease-out forwards;
  }

  @keyframes bulago-reveal {
    to { clip-path: circle(100% at 50% 45%); }
  }

  @keyframes bulago-float {
    0%, 100% { transform: translateY(0); }
    50%      { transform: translateY(-8px); }
  }

  @keyframes bulago-glow {
    0%, 100% { filter: drop-shadow(0 0 6px rgba(165,28,33,0.3)); }
    50%      { filter: drop-shadow(0 0 20px rgba(165,28,33,0.7)); }
  }

  .bulago-wrapper :global(#wings) {
    animation: bulago-wing-flap 3s ease-in-out 2s infinite;
  }

  @keyframes bulago-wing-flap {
    0%, 100% { transform: translateY(0); }
    50%      { transform: translateY(-2px); }
  }

  .bulago-wrapper :global(#eyes) {
    transform-box: fill-box;
    transform-origin: center;
    animation: bulago-blink 5s ease-in-out 2.5s infinite;
