---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';
import { t, getLocalePath } from '../../i18n';
const locale = 'en';
const p = (path: string) => getLocalePath(locale, path);
---

<BaseLayout
  title="About Insureversia"
  description="Meet Insureversia — your independent guide to AI in the insurance industry. Curated by Carlos Miranda Levy, Stanford Fellow and Chief Innovation Officer at CEMI.AI."
  locale={locale}
  keywords="Insureversia, AI in insurance guide, Carlos Miranda Levy, insurance AI, CEMI.ai"
>
  <!-- Hero -->
  <section class="hero" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 50%, var(--color-dark-surface) 100%); position: relative;">
    <div class="container" style="position: relative; z-index: 1;">
      <div class="slide-up" style="max-width: 800px;">
        <h1 style="font-size: var(--text-5xl); margin-bottom: var(--space-6);">{t(locale, 'about.title')}</h1>
        <p class="lead" style="margin-bottom: var(--space-6);">
          Your independent guide to AI in insurance. Part educator, part curator, part ethical compass — Insureversia exists to help insurance professionals navigate the intersection of insurance and artificial intelligence with confidence, competence, and integrity.
        </p>
      </div>
    </div>
    <div style="position: absolute; bottom: 0; left: 0; right: 0; height: 120px; background: linear-gradient(to top, var(--surface-page), transparent);"></div>
  </section>

  <!-- Hub Cards -->
  <section class="section">
    <div class="container">
      <div class="grid grid--3 reveal-stagger" style="max-width: 960px; margin: 0 auto;">
        <a href={p('/about/insureversia/')} class="hub-card card card--flat">
          <div class="hub-card__icon"><Icon name="sparkles" size={36} /></div>
          <h3 class="hub-card__title">{t(locale, 'about.hubCard1Title')}</h3>
          <p class="hub-card__subtitle">{t(locale, 'about.hubCard1Desc')}</p>
        </a>
        <a href={p('/about/guide/')} class="hub-card card card--flat">
          <div class="hub-card__icon"><Icon name="globe" size={36} /></div>
          <h3 class="hub-card__title">{t(locale, 'about.hubCard2Title')}</h3>
          <p class="hub-card__subtitle">{t(locale, 'about.hubCard2Desc')}</p>
        </a>
        <a href={p('/about/team/')} class="hub-card card card--flat">
          <div class="hub-card__icon"><Icon name="users" size={36} /></div>
          <h3 class="hub-card__title">{t(locale, 'about.hubCard3Title')}</h3>
          <p class="hub-card__subtitle">{t(locale, 'about.hubCard3Desc')}</p>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section">
    <div class="container">
      <div class="reveal" style="text-align: center;">
        <h2 style="margin-bottom: var(--space-4);">Start Your AI Journey</h2>
        <div style="display: flex; gap: var(--space-4); flex-wrap: wrap; justify-content: center;">
          <a href={p('/learn/ai-101/')} class="btn btn--primary">AI 101</a>
          <a href={p('/practice/quick-wins/')} class="btn btn--secondary">Quick Wins</a>
          <a href={p('/resources/faq/')} class="btn btn--ghost">FAQ</a>
        </div>
        <p style="margin-top: var(--space-4); font-size: var(--text-sm); color: var(--text-muted);">
          {t(locale, 'learningProgram.programCta')}
          <a href={p('/learn/program/')} style="font-weight: var(--font-semibold);">
            {t(locale, 'learningProgram.programCtaLink')} &rarr;
          </a>
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hub-card {
    text-align: center;
    padding: var(--space-8) var(--space-6);
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    display: block;
  }
  .hub-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  .hub-card__icon {
    color: var(--color-primary);
    margin-bottom: var(--space-4);
  }
  .hub-card__title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-2);
  }
  .hub-card__subtitle {
    color: var(--text-secondary);
    font-size: var(--text-sm);
    margin-bottom: 0;
    line-height: var(--leading-relaxed);
  }
</style>
