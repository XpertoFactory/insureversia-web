---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Icon from '../../../../components/Icon.astro';
import { t, getLocalePath } from '../../../../i18n';
const locale = 'es';
const p = (path: string) => getLocalePath(locale, path);

const categories = [
  {
    title: 'Policy Analysis & Review',
    icon: 'file-text',
    description: 'Use AI to accelerate policy analysis, coverage review, and endorsement evaluation. Learn techniques for summarizing complex policy language, identifying coverage gaps, and comparing terms across carriers and policy years.',
    tools: ['ChatGPT', 'Claude', 'Cytora', 'Akur8'],
    examples: [
      'Policy summary generation',
      'Coverage gap analysis',
      'Endorsement review and comparison',
      'Portfolio comparison across carriers',
    ],
  },
  {
    title: 'Claims Processing & Assessment',
    icon: 'clipboard-list',
    description: 'From first notice of loss to resolution, AI accelerates every stage of claims handling. Learn how to use AI for triage, damage assessment, reserve estimation, and subrogation analysis while maintaining accuracy and compliance.',
    tools: ['ChatGPT', 'Claude', 'Tractable', 'Shift Technology'],
    examples: [
      'First notice of loss triage',
      'Damage assessment acceleration',
      'Reserve estimation support',
      'Subrogation analysis',
    ],
  },
  {
    title: 'Underwriting & Risk Selection',
    icon: 'shield',
    description: 'AI-powered underwriting goes beyond traditional risk assessment. Evaluate submissions faster, match risks to appetite, generate supplemental questionnaires, and benchmark against competitive markets with greater precision.',
    tools: ['Akur8', 'Cytora', 'ChatGPT', 'Claude', 'Microsoft Copilot'],
    examples: [
      'Risk evaluation reports',
      'Appetite matching and selection',
      'Supplemental questionnaire generation',
      'Competitive analysis and benchmarking',
    ],
  },
  {
    title: 'Customer Communication & Service',
    icon: 'message-square',
    description: 'AI helps you communicate complex insurance concepts in plain language, draft policyholder updates, prepare renewal materials, and build FAQ documents. Improve customer satisfaction by delivering clearer, faster communication.',
    tools: ['ChatGPT', 'Claude', 'Grammarly', 'Microsoft Copilot'],
    examples: [
      'Renewal notice drafting',
      'Coverage explanation letters',
      'Claims status update templates',
      'FAQ document creation',
    ],
  },
  {
    title: 'Compliance & Regulatory Monitoring',
    icon: 'scale',
    description: 'Stay ahead of regulatory changes with AI-powered monitoring, analysis, and compliance mapping. Summarize new regulations, assess compliance gaps, prepare rate and form filings, and support audit readiness across jurisdictions.',
    tools: ['Thomson Reuters', 'ChatGPT', 'Claude'],
    examples: [
      'Regulatory change monitoring',
      'Compliance gap analysis',
      'Filing preparation support',
      'Audit documentation and support',
    ],
  },
  {
    title: 'Fraud Detection & Prevention',
    icon: 'alert-triangle',
    description: 'AI-driven fraud detection identifies suspicious patterns that human review alone can miss. Analyze claims for red flags, generate investigation summaries, prepare SIU referral documentation, and build institutional knowledge from historical fraud cases.',
    tools: ['FRISS', 'Shift Technology', 'ChatGPT', 'Claude'],
    examples: [
      'Claims pattern analysis',
      'Red flag identification',
      'Investigation summary generation',
      'SIU referral documentation',
    ],
  },
  {
    title: 'Data Analytics & Portfolio Management',
    icon: 'settings',
    description: 'Optimize your book of business with AI-assisted analytics, reporting, and trend analysis. Generate loss ratio insights, track portfolio performance, identify emerging trends, and benchmark against market data.',
    tools: ['ChatGPT', 'Claude', 'Microsoft Copilot', 'Custom GPTs'],
    examples: [
      'Loss ratio analysis and reporting',
      'Portfolio performance dashboards',
      'Trend identification and forecasting',
      'Market benchmarking reports',
    ],
  },
];
---

<BaseLayout
  title="Practical Applications"
  description="The Practice Lab: AI applications organized by insurance workflow, with tools, techniques, and real examples."
  locale={locale}
>
  <!-- Hero -->
  <section class="hero" style="background: linear-gradient(135deg, rgba(27,42,74,0.82) 0%, rgba(45,55,72,0.78) 100%), url('/assets/images/hero-images/hero-image-practice.png') top/cover no-repeat;">
    <div class="container" style="position: relative; z-index: 1;">
      <div class="slide-up" style="max-width: 800px;">
        <p class="text-sm font-semibold mb-4" style="color: var(--color-secondary); text-transform: uppercase; letter-spacing: 0.1em;">Practice</p>
        <h1 style="font-size: var(--text-5xl); margin-bottom: var(--space-6);">The Practice Lab</h1>
        <p class="lead" style="margin-bottom: var(--space-6);">
          AI applications organized by the workflows you already use. Each category includes recommended tools, practical techniques, and real examples from insurance practice. Find where AI fits in your daily work.
        </p>
      </div>
    </div>
    <div style="position: absolute; bottom: 0; left: 0; right: 0; height: 120px; background: linear-gradient(to top, var(--surface-page), transparent);"></div>
  </section>

  <!-- Categories -->
  <section class="section">
    <div class="container">
      <div class="section-header reveal">
        <h2>Application Categories</h2>
        <p>Seven categories covering the full spectrum of AI-augmented insurance work, from policy analysis to portfolio management.</p>
      </div>

      <div class="grid grid--2 reveal-stagger">
        {categories.map((cat) => (
          <div class="card" style="display: flex; flex-direction: column; padding: var(--space-8);">
            <div style="display: flex; align-items: center; gap: var(--space-3); margin-bottom: var(--space-4);">
              <div style="color: var(--color-primary);"><Icon name={cat.icon} size={32} /></div>
              <h3 style="font-size: var(--text-xl); margin-bottom: 0;">{cat.title}</h3>
            </div>
            <p class="card__body" style="margin-bottom: var(--space-4); flex: 1;">{cat.description}</p>

            <div style="margin-bottom: var(--space-4);">
              <h4 class="text-sm font-semibold" style="margin-bottom: var(--space-2); color: var(--color-primary);">Key Tools</h4>
              <div class="flex gap-2 flex--wrap">
                {cat.tools.map((tool) => (
                  <span class="tag">{tool}</span>
                ))}
              </div>
            </div>

            <div>
              <h4 class="text-sm font-semibold" style="margin-bottom: var(--space-2); color: var(--color-primary);">Example Applications</h4>
              <ul style="padding-left: var(--space-5); margin-bottom: 0;">
                {cat.examples.map((ex) => (
                  <li class="text-sm" style="color: var(--text-secondary); margin-bottom: var(--space-1);">{ex}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Getting Started -->
  <section class="section section--parchment">
    <div class="container">
      <div class="reveal" style="max-width: 800px; margin: 0 auto;">
        <div class="card card--accent" style="padding: var(--space-8);">
          <h2 style="font-size: var(--text-3xl); margin-bottom: var(--space-4);">Where to Start</h2>
          <p style="font-size: var(--text-lg); color: var(--text-secondary); margin-bottom: var(--space-4); line-height: var(--leading-relaxed);">
            You do not need to transform your entire operation at once. Start with the application that addresses your biggest pain point â€” the task that consumes the most time, causes the most frustration, or offers the most obvious improvement opportunity.
          </p>
          <p style="color: var(--text-secondary); margin-bottom: var(--space-6); line-height: var(--leading-relaxed);">
            For most insurance professionals, the quickest win is in <strong>policy analysis</strong> or <strong>claims processing</strong>. These are tasks you handle daily, where even a modest efficiency gain compounds into significant time savings over weeks and months.
          </p>
          <div class="flex gap-4 flex--wrap">
            <a href="/practice/quick-wins/" class="btn btn--primary btn--sm">Start with Quick Wins</a>
            <a href="/learn/prompt-engineering/" class="btn btn--secondary btn--sm">Learn Prompt Engineering</a>
          </div>
          <p style="margin-top: var(--space-4); font-size: var(--text-sm); color: var(--text-muted);">
            {t(locale, 'learningProgram.programCta')}
            <a href={p('/learn/program/')} style="font-weight: var(--font-semibold);">
              {t(locale, 'learningProgram.programCtaLink')} &rarr;
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
