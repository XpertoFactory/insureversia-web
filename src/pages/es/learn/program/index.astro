---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Icon from '../../../../components/Icon.astro';
import { t, getLocalePath } from '../../../../i18n';

const locale = 'es';
const p = (path: string) => getLocalePath(locale, path);
---

<BaseLayout
  title={t(locale, 'learningProgram.title')}
  description={t(locale, 'learningProgram.description')}
  locale={locale}
>
  <!-- Section 1: Hero -->
  <section class="hero" style="background: linear-gradient(135deg, rgba(15,43,70,0.88) 0%, rgba(45,55,72,0.78) 100%), url('/assets/images/hero-images/hero-image-learn.png') top/cover no-repeat;">
    <div class="container" style="position: relative; z-index: 1;">
      <div class="slide-up" style="max-width: 800px;">
        <p class="text-sm font-semibold mb-4" style="color: var(--color-secondary); text-transform: uppercase; letter-spacing: 0.1em;">{t(locale, 'learningProgram.heroLabel')}</p>
        <h1 style="font-size: var(--text-5xl); margin-bottom: var(--space-6);">{t(locale, 'learningProgram.title')}</h1>
        <p class="lead" style="margin-bottom: var(--space-8);">
          {t(locale, 'learningProgram.heroLead')}
        </p>
        <div class="flex gap-4 flex--wrap">
          <button class="btn btn--primary contact-trigger">{t(locale, 'learningProgram.ctaRequest')}</button>
          <a href={p('/practice/ai-readiness/')} class="btn btn--secondary">{t(locale, 'learningProgram.ctaAssessment')}</a>
        </div>
      </div>
    </div>
    <div style="position: absolute; bottom: 0; left: 0; right: 0; height: 120px; background: linear-gradient(to top, var(--surface-page), transparent);"></div>
  </section>

  <!-- Section 2: The Problem -->
  <section class="section">
    <div class="container">
      <div class="reveal" style="max-width: 700px; margin: 0 auto;">
        <h2 style="text-align: center; margin-bottom: var(--space-8);">{t(locale, 'learningProgram.problemTitle')}</h2>
        <p style="font-size: var(--text-lg); color: var(--text-secondary); margin-bottom: var(--space-4); line-height: 1.8;">
          {t(locale, 'learningProgram.problemP1')}
        </p>
        <p style="font-size: var(--text-lg); color: var(--text-secondary); margin-bottom: var(--space-4); line-height: 1.8;">
          {t(locale, 'learningProgram.problemP2')}
        </p>
        <p style="font-size: var(--text-lg); font-weight: var(--font-semibold); color: var(--color-primary); line-height: 1.8;">
          {t(locale, 'learningProgram.problemP3')}
        </p>
      </div>
    </div>
  </section>

  <!-- Section 3: Three Pillars -->
  <section class="section section--parchment">
    <div class="container">
      <h2 class="text-center" style="margin-bottom: var(--space-10);">{t(locale, 'learningProgram.pillarsTitle')}</h2>
      <div class="grid grid--3 reveal-stagger">
        <div class="card" style="text-align: center; padding: var(--space-8);">
          <div style="margin-bottom: var(--space-4);">
            <Icon name="target" size={40} style="color: var(--color-secondary);" />
          </div>
          <h3 style="margin-bottom: var(--space-3);">{t(locale, 'learningProgram.pillar1Title')}</h3>
          <p style="color: var(--text-secondary);">{t(locale, 'learningProgram.pillar1Desc')}</p>
        </div>
        <div class="card" style="text-align: center; padding: var(--space-8);">
          <div style="margin-bottom: var(--space-4);">
            <Icon name="zap" size={40} style="color: var(--color-secondary);" />
          </div>
          <h3 style="margin-bottom: var(--space-3);">{t(locale, 'learningProgram.pillar2Title')}</h3>
          <p style="color: var(--text-secondary);">{t(locale, 'learningProgram.pillar2Desc')}</p>
        </div>
        <div class="card" style="text-align: center; padding: var(--space-8);">
          <div style="margin-bottom: var(--space-4);">
            <Icon name="layers" size={40} style="color: var(--color-secondary);" />
          </div>
          <h3 style="margin-bottom: var(--space-3);">{t(locale, 'learningProgram.pillar3Title')}</h3>
          <p style="color: var(--text-secondary);">{t(locale, 'learningProgram.pillar3Desc')}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 4: Program Formats (Accordion) -->
  <section class="section">
    <div class="container">
      <div style="max-width: 800px; margin: 0 auto;">
        <h2 class="text-center" style="margin-bottom: var(--space-3);">{t(locale, 'learningProgram.formatsTitle')}</h2>
        <p class="text-center" style="color: var(--text-secondary); font-size: var(--text-lg); margin-bottom: var(--space-10);">
          {t(locale, 'learningProgram.formatsSubtitle')}
        </p>

        <div class="reveal accordion">
          <div class="accordion__item">
            <button class="accordion__trigger">
              <span><strong>{t(locale, 'learningProgram.formatBrief')}</strong> <span style="color: var(--text-muted);">— {t(locale, 'learningProgram.formatBriefDuration')}</span></span>
            </button>
            <div class="accordion__content">
              <p style="margin-bottom: var(--space-3); color: var(--text-secondary);">{t(locale, 'learningProgram.formatBriefDesc')}</p>
              <div class="flex gap-2 flex--wrap">
                {t(locale, 'learningProgram.formatBriefFormats').split(', ').map((f: string) => (
                  <span class="filter-chip">{f}</span>
                ))}
              </div>
            </div>
          </div>

          <div class="accordion__item">
            <button class="accordion__trigger">
              <span><strong>{t(locale, 'learningProgram.formatFocused')}</strong> <span style="color: var(--text-muted);">— {t(locale, 'learningProgram.formatFocusedDuration')}</span></span>
            </button>
            <div class="accordion__content">
              <p style="margin-bottom: var(--space-3); color: var(--text-secondary);">{t(locale, 'learningProgram.formatFocusedDesc')}</p>
              <div class="flex gap-2 flex--wrap">
                {t(locale, 'learningProgram.formatFocusedFormats').split(', ').map((f: string) => (
                  <span class="filter-chip">{f}</span>
                ))}
              </div>
            </div>
          </div>

          <div class="accordion__item">
            <button class="accordion__trigger">
              <span><strong>{t(locale, 'learningProgram.formatMedium')}</strong> <span style="color: var(--text-muted);">— {t(locale, 'learningProgram.formatMediumDuration')}</span></span>
            </button>
            <div class="accordion__content">
              <p style="margin-bottom: var(--space-3); color: var(--text-secondary);">{t(locale, 'learningProgram.formatMediumDesc')}</p>
              <div class="flex gap-2 flex--wrap">
                {t(locale, 'learningProgram.formatMediumFormats').split(', ').map((f: string) => (
                  <span class="filter-chip">{f}</span>
                ))}
              </div>
            </div>
          </div>

          <div class="accordion__item">
            <button class="accordion__trigger">
              <span><strong>{t(locale, 'learningProgram.formatIntensive')}</strong> <span style="color: var(--text-muted);">— {t(locale, 'learningProgram.formatIntensiveDuration')}</span></span>
            </button>
            <div class="accordion__content">
              <p style="margin-bottom: var(--space-3); color: var(--text-secondary);">{t(locale, 'learningProgram.formatIntensiveDesc')}</p>
              <div class="flex gap-2 flex--wrap">
                {t(locale, 'learningProgram.formatIntensiveFormats').split(', ').map((f: string) => (
                  <span class="filter-chip">{f}</span>
                ))}
              </div>
            </div>
          </div>

          <div class="accordion__item">
            <button class="accordion__trigger">
              <span><strong>{t(locale, 'learningProgram.formatSpecialized')}</strong> <span style="color: var(--text-muted);">— {t(locale, 'learningProgram.formatSpecializedDuration')}</span></span>
            </button>
            <div class="accordion__content">
              <p style="margin-bottom: var(--space-3); color: var(--text-secondary);">{t(locale, 'learningProgram.formatSpecializedDesc')}</p>
              <div class="flex gap-2 flex--wrap">
                {t(locale, 'learningProgram.formatSpecializedFormats').split(', ').map((f: string) => (
                  <span class="filter-chip">{f}</span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 5: Learning Modes + Durations -->
  <section class="section section--parchment">
    <div class="container">
      <h2 class="text-center" style="margin-bottom: var(--space-10);">{t(locale, 'learningProgram.modesTitle')}</h2>
      <div class="grid grid--3 reveal-stagger">
        <div class="card" style="text-align: center; padding: var(--space-8);">
          <div style="margin-bottom: var(--space-4);">
            <Icon name="book-open" size={36} style="color: var(--color-secondary);" />
          </div>
          <h3 style="margin-bottom: var(--space-3);">{t(locale, 'learningProgram.mode1Title')}</h3>
          <p style="color: var(--text-secondary);">{t(locale, 'learningProgram.mode1Desc')}</p>
        </div>
        <div class="card" style="text-align: center; padding: var(--space-8);">
          <div style="margin-bottom: var(--space-4);">
            <Icon name="message-circle" size={36} style="color: var(--color-secondary);" />
          </div>
          <h3 style="margin-bottom: var(--space-3);">{t(locale, 'learningProgram.mode2Title')}</h3>
          <p style="color: var(--text-secondary);">{t(locale, 'learningProgram.mode2Desc')}</p>
        </div>
        <div class="card" style="text-align: center; padding: var(--space-8);">
          <div style="margin-bottom: var(--space-4);">
            <Icon name="users" size={36} style="color: var(--color-secondary);" />
          </div>
          <h3 style="margin-bottom: var(--space-3);">{t(locale, 'learningProgram.mode3Title')}</h3>
          <p style="color: var(--text-secondary);">{t(locale, 'learningProgram.mode3Desc')}</p>
        </div>
      </div>
      <div class="text-center" style="margin-top: var(--space-8);">
        <p style="color: var(--text-muted); font-size: var(--text-sm); margin-bottom: var(--space-3);">{t(locale, 'learningProgram.durationLabel')}</p>
        <div class="flex gap-3 flex--wrap" style="justify-content: center;">
          <span class="filter-chip">1h</span>
          <span class="filter-chip">4h</span>
          <span class="filter-chip">8h</span>
          <span class="filter-chip">24h</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 6: How It Works -->
  <section class="section">
    <div class="container">
      <h2 class="text-center" style="margin-bottom: var(--space-10);">{t(locale, 'learningProgram.howTitle')}</h2>
      <div style="max-width: 700px; margin: 0 auto;">
        <div class="reveal-stagger">
          {[
            { num: '1', title: t(locale, 'learningProgram.step1Title'), desc: t(locale, 'learningProgram.step1Desc') },
            { num: '2', title: t(locale, 'learningProgram.step2Title'), desc: t(locale, 'learningProgram.step2Desc') },
            { num: '3', title: t(locale, 'learningProgram.step3Title'), desc: t(locale, 'learningProgram.step3Desc') },
            { num: '4', title: t(locale, 'learningProgram.step4Title'), desc: t(locale, 'learningProgram.step4Desc') },
          ].map((step) => (
            <div style="display: flex; gap: var(--space-5); margin-bottom: var(--space-8); align-items: flex-start;">
              <div class="number-badge number-badge--success" style="flex-shrink: 0;">{step.num}</div>
              <div>
                <h3 style="margin-bottom: var(--space-1);">{step.title}</h3>
                <p style="color: var(--text-secondary); margin: 0;">{step.desc}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Section 7: Methodology Callout -->
  <section class="section section--parchment">
    <div class="container">
      <div class="reveal" style="max-width: 800px; margin: 0 auto;">
        <div class="card card--accent" style="padding: var(--space-8);">
          <h3 style="margin-bottom: var(--space-4);">{t(locale, 'learningProgram.methodologyTitle')}</h3>
          <p style="color: var(--text-secondary); line-height: 1.8; margin: 0;">
            {t(locale, 'learningProgram.methodologyDesc')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 8: Case Studies -->
  <section class="section">
    <div class="container">
      <div class="reveal" style="max-width: 800px; margin: 0 auto; text-align: center;">
        <h2 style="margin-bottom: var(--space-3);">{t(locale, 'caseStudies.title')}</h2>
        <p style="color: var(--text-secondary); font-size: var(--text-lg); margin-bottom: var(--space-8);">
          {t(locale, 'caseStudies.heroLead')}
        </p>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: var(--space-6); text-align: left; margin-bottom: var(--space-8);">
          <div class="card" style="padding: var(--space-5);">
            <span style="display: inline-block; padding: 3px 10px; border-radius: var(--radius-sm); font-size: var(--text-xs); font-weight: var(--font-bold); text-transform: uppercase; letter-spacing: 0.05em; background: var(--color-success); color: white; margin-bottom: var(--space-3);">{t(locale, 'caseStudies.realLabel')}</span>
            <h4 style="margin-bottom: var(--space-2);">{t(locale, 'caseStudies.lemonade.title')}</h4>
            <p style="font-size: var(--text-sm); color: var(--text-secondary); margin: 0;">{t(locale, 'caseStudies.lemonade.subtitle')}</p>
          </div>
          <div class="card" style="padding: var(--space-5);">
            <span style="display: inline-block; padding: 3px 10px; border-radius: var(--radius-sm); font-size: var(--text-xs); font-weight: var(--font-bold); text-transform: uppercase; letter-spacing: 0.05em; background: var(--color-accent); color: white; margin-bottom: var(--space-3);">{t(locale, 'caseStudies.fictionalLabel')}</span>
            <h4 style="margin-bottom: var(--space-2);">{t(locale, 'caseStudies.breach.title')}</h4>
            <p style="font-size: var(--text-sm); color: var(--text-secondary); margin: 0;">{t(locale, 'caseStudies.breach.subtitle')}</p>
          </div>
          <div class="card" style="padding: var(--space-5);">
            <span style="display: inline-block; padding: 3px 10px; border-radius: var(--radius-sm); font-size: var(--text-xs); font-weight: var(--font-bold); text-transform: uppercase; letter-spacing: 0.05em; background: var(--color-error); color: white; margin-bottom: var(--space-3);">{t(locale, 'caseStudies.absurdLabel')}</span>
            <h4 style="margin-bottom: var(--space-2);">{t(locale, 'caseStudies.weather.title')}</h4>
            <p style="font-size: var(--text-sm); color: var(--text-secondary); margin: 0;">{t(locale, 'caseStudies.weather.subtitle')}</p>
          </div>
        </div>
        <a href={p('/learn/program/case-studies/')} class="btn btn--primary">{t(locale, 'caseStudies.viewCaseStudy')} &rarr;</a>
      </div>
    </div>
  </section>

  <!-- Section 9: Final CTA -->
  <section class="section section--primary" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark, #0a1d33) 100%); color: var(--text-inverse);">
    <div class="container text-center">
      <div class="reveal" style="max-width: 600px; margin: 0 auto;">
        <h2 style="color: var(--text-inverse); margin-bottom: var(--space-4);">{t(locale, 'learningProgram.ctaFinalTitle')}</h2>
        <p style="font-size: var(--text-lg); opacity: 0.9; margin-bottom: var(--space-8);">
          {t(locale, 'learningProgram.ctaFinalDesc')}
        </p>
        <div class="flex gap-4 flex--wrap" style="justify-content: center;">
          <button class="btn btn--primary contact-trigger" style="background: var(--color-secondary); color: var(--color-primary);">{t(locale, 'learningProgram.ctaRequest')}</button>
          <a href={p('/learn/ai-101/')} class="btn btn--secondary" style="border-color: rgba(255,255,255,0.4); color: var(--text-inverse);">{t(locale, 'learningProgram.ctaFinalExplore')}</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
