---
import LikeButton from './LikeButton.svelte';
import { t, type Locale } from '../i18n';

interface Props {
  locale: Locale;
  pageId: string;
}

const { locale, pageId } = Astro.props;
const likeLabel = locale === 'es' ? 'Me gusta' : 'Like';
const likedLabel = locale === 'es' ? 'Te gustó' : 'Liked';
---

<section class="page-engagement" aria-label={locale === 'es' ? 'Interacción con la página' : 'Page engagement'}>
  <div class="page-engagement__inner">
    <LikeButton
      client:visible
      contentType="page"
      contentId={pageId}
      likeLabel={likeLabel}
      likedLabel={likedLabel}
    />
    <button
      class="share-trigger engagement-share-btn"
      aria-label={t(locale, 'engagement.shareThisPage')}
      type="button"
    >
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="18" cy="5" r="3"/><circle cx="6" cy="12" r="3"/><circle cx="18" cy="19" r="3"/>
        <line x1="8.59" x2="15.42" y1="13.51" y2="17.49"/><line x1="15.41" x2="8.59" y1="6.51" y2="10.49"/>
      </svg>
      <span>{t(locale, 'engagement.share')}</span>
    </button>
  </div>
</section>

<style>
  .page-engagement {
    padding: var(--space-6, 1.5rem) 0;
    margin-top: var(--space-8, 2rem);
    border-top: 1px solid var(--border-light, #e5e5e5);
  }

  .page-engagement__inner {
    max-width: var(--max-width, 1200px);
    margin: 0 auto;
    padding: 0 var(--space-6, 1.5rem);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .engagement-share-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.35rem 0.65rem;
    font-family: var(--font-body, sans-serif);
    font-size: var(--text-xs, 0.75rem);
    font-weight: 600;
    color: var(--text-muted, #888);
    background: transparent;
    border: 1px solid var(--border-light, #e5e5e5);
    border-radius: var(--radius-full, 9999px);
    cursor: pointer;
    transition: all 150ms ease;
    user-select: none;
    line-height: 1;
  }

  .engagement-share-btn:hover {
    color: var(--color-primary, #0F2B46);
    border-color: var(--color-primary, #0F2B46);
    background: rgba(15, 43, 70, 0.05);
  }

  .engagement-share-btn svg {
    flex-shrink: 0;
  }
</style>
