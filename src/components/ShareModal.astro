---
import { t, type Locale } from '../i18n';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<!-- Share Modal Overlay -->
<div class="share-modal-overlay" id="share-modal-overlay" aria-hidden="true">
  <div class="share-modal" role="dialog" aria-modal="true" aria-label={t(locale, 'share.title')}>
    <!-- Close button -->
    <button class="share-modal__close" id="share-modal-close" aria-label="Close">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18" /><line x1="6" y1="6" x2="18" y2="18" />
      </svg>
    </button>

    <!-- Header -->
    <h2 class="share-modal__title">{t(locale, 'share.title')}</h2>

    <!-- Preview -->
    <div class="share-modal__preview">
      <p class="share-modal__preview-title" id="share-preview-title"></p>
      <p class="share-modal__preview-desc" id="share-preview-desc"></p>
      <p class="share-modal__preview-url" id="share-preview-url"></p>
    </div>

    <!-- Platform grid -->
    <div class="share-modal__platforms">
      <button class="share-platform" data-platform="twitter" type="button">
        <svg class="share-platform__icon" viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
        <span>{t(locale, 'share.platforms.twitter')}</span>
      </button>

      <button class="share-platform" data-platform="facebook" type="button">
        <svg class="share-platform__icon" viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
        <span>{t(locale, 'share.platforms.facebook')}</span>
      </button>

      <button class="share-platform" data-platform="linkedin" type="button">
        <svg class="share-platform__icon" viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        <span>{t(locale, 'share.platforms.linkedin')}</span>
      </button>

      <button class="share-platform" data-platform="whatsapp" type="button">
        <svg class="share-platform__icon" viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span>{t(locale, 'share.platforms.whatsapp')}</span>
      </button>

      <button class="share-platform" data-platform="email" type="button">
        <svg class="share-platform__icon" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
        </svg>
        <span>{t(locale, 'share.platforms.email')}</span>
      </button>
    </div>

    <!-- Copy Link -->
    <button class="share-modal__copy-link" id="share-copy-link" type="button">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
      </svg>
      <span id="share-copy-label">{t(locale, 'share.copyLink')}</span>
    </button>

    <!-- Native Share (hidden by default, shown if navigator.share available) -->
    <button class="share-modal__native" id="share-native" type="button" style="display:none;">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="18" cy="5" r="3"/><circle cx="6" cy="12" r="3"/><circle cx="18" cy="19" r="3"/><line x1="8.59" x2="15.42" y1="13.51" y2="17.49"/><line x1="15.41" x2="8.59" y1="6.51" y2="10.49"/>
      </svg>
      {t(locale, 'share.nativeShare')}
    </button>
  </div>
</div>

<!-- Share Toast -->
<div class="share-toast" id="share-toast" aria-live="polite"></div>

<script define:vars={{ copiedText: t(locale, 'share.copied'), copyLinkText: t(locale, 'share.copyLink') }}>
  (function() {
    const overlay = document.getElementById('share-modal-overlay');
    const modal = overlay?.querySelector('.share-modal');
    const closeBtn = document.getElementById('share-modal-close');
    const previewTitle = document.getElementById('share-preview-title');
    const previewDesc = document.getElementById('share-preview-desc');
    const previewUrl = document.getElementById('share-preview-url');
    const copyBtn = document.getElementById('share-copy-link');
    const copyLabel = document.getElementById('share-copy-label');
    const nativeBtn = document.getElementById('share-native');
    const toast = document.getElementById('share-toast');

    let shareData = { title: '', description: '', url: '' };
    let lastTrigger = null;

    // Show native share button if supported
    if (navigator.share) {
      nativeBtn.style.display = '';
    }

    function getShareData(trigger) {
      const title = trigger?.dataset.shareTitle
        || document.querySelector('meta[property="og:title"]')?.content
        || document.title;
      const description = trigger?.dataset.shareDescription
        || document.querySelector('meta[property="og:description"]')?.content
        || '';
      const url = trigger?.dataset.shareUrl
        || document.querySelector('link[rel="canonical"]')?.href
        || window.location.href;
      return { title, description, url };
    }

    function truncateUrl(url, max) {
      if (url.length <= max) return url;
      return url.substring(0, max - 1) + '\u2026';
    }

    function openShareModal(trigger) {
      shareData = getShareData(trigger);
      lastTrigger = trigger;

      previewTitle.textContent = shareData.title;
      previewDesc.textContent = shareData.description;
      previewUrl.textContent = truncateUrl(shareData.url, 60);

      // Reset copy button state
      copyLabel.textContent = copyLinkText;
      copyBtn.classList.remove('is-copied');

      overlay.classList.add('is-open');
      overlay.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';

      // Focus close button
      closeBtn?.focus();

      // Trap focus
      modal?.addEventListener('keydown', trapFocus);
    }

    function closeShareModal() {
      overlay.classList.remove('is-open');
      overlay.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      modal?.removeEventListener('keydown', trapFocus);

      // Return focus to trigger
      if (lastTrigger) {
        lastTrigger.focus();
        lastTrigger = null;
      }
    }

    function trapFocus(e) {
      if (e.key !== 'Tab') return;
      const focusable = modal.querySelectorAll('button:not([style*="display:none"]):not([style*="display: none"])');
      const first = focusable[0];
      const last = focusable[focusable.length - 1];

      if (e.shiftKey && document.activeElement === first) {
        e.preventDefault();
        last.focus();
      } else if (!e.shiftKey && document.activeElement === last) {
        e.preventDefault();
        first.focus();
      }
    }

    // Platform share URLs
    function sharePlatform(platform) {
      const { title, description, url } = shareData;
      const tweetText = description ? `${title} — ${description}` : title;
      const whatsappText = description ? `*${title}*\n${description}\n${url}` : `${title}\n${url}`;
      const urls = {
        twitter: `https://twitter.com/intent/tweet?text=${encodeURIComponent(tweetText)}&url=${encodeURIComponent(url)}`,
        facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`,
        linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`,
        whatsapp: `https://api.whatsapp.com/send?text=${encodeURIComponent(whatsappText)}`,
      };

      if (platform === 'email') {
        window.location.href = `mailto:?subject=${encodeURIComponent(title)}&body=${encodeURIComponent(description + '\n\n' + url)}`;
        return;
      }

      const shareUrl = urls[platform];
      if (shareUrl) {
        window.open(shareUrl, '_blank', 'noopener,noreferrer,width=600,height=500');
      }
    }

    // Event: share trigger buttons — always open modal with platform buttons
    document.querySelectorAll('.share-trigger').forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        openShareModal(trigger);
      });
    });

    // Event: close
    closeBtn?.addEventListener('click', closeShareModal);

    // Event: backdrop click
    overlay?.addEventListener('click', (e) => {
      if (e.target === overlay) closeShareModal();
    });

    // Event: Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay?.classList.contains('is-open')) {
        closeShareModal();
      }
    });

    // Event: platform buttons
    document.querySelectorAll('.share-platform[data-platform]').forEach(btn => {
      btn.addEventListener('click', () => {
        sharePlatform(btn.dataset.platform);
      });
    });

    // Event: copy link
    copyBtn?.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(shareData.url);
        copyLabel.textContent = copiedText;
        copyBtn.classList.add('is-copied');

        // Show toast
        toast.textContent = copiedText;
        toast.classList.add('is-visible');
        setTimeout(() => {
          toast.classList.remove('is-visible');
        }, 2000);

        // Reset after 3s
        setTimeout(() => {
          copyLabel.textContent = copyLinkText;
          copyBtn.classList.remove('is-copied');
        }, 3000);
      } catch {
        // Fallback for older browsers
        const textarea = document.createElement('textarea');
        textarea.value = shareData.url;
        textarea.style.position = 'fixed';
        textarea.style.opacity = '0';
        document.body.appendChild(textarea);
        textarea.select();
        document.execCommand('copy');
        document.body.removeChild(textarea);
        copyLabel.textContent = copiedText;
        copyBtn.classList.add('is-copied');
      }
    });

    // Event: native share button inside modal
    nativeBtn?.addEventListener('click', async () => {
      try {
        await navigator.share({
          title: shareData.title,
          text: shareData.description,
          url: shareData.url,
        });
        closeShareModal();
      } catch {
        // User cancelled — do nothing
      }
    });
  })();
</script>
